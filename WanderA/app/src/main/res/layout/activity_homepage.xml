<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Homepage">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="308dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/seco" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="Discover. Indulge in nature. Speak the language"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="247dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Discover by Municipality"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:text="NORTHERN ANTIQUE"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="146dp"
                android:layout_height="31dp"
                android:text="EXPLORE"
                android:textColor="#fff"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="203dp"
                android:layout_height="132dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:srcCompat="@drawable/tibiaogreen" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="82dp"
                android:layout_height="31dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="TIBIAO"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="5dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="@+id/imageView4" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="174dp"
                android:layout_marginStart="6dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:srcCompat="@drawable/culasiblue" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="82dp"
                android:layout_height="36dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="12dp"
                android:text="CULASI"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="139dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:srcCompat="@drawable/sebasteyellow" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="112dp"
                android:layout_height="31dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="12dp"
                android:text="SEBASTE"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="@+id/imageView6" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="156dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                app:srcCompat="@drawable/pandanblue" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="112dp"
                android:layout_height="31dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="PANDAN"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="153dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:srcCompat="@drawable/libertadindigo" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="112dp"
                android:layout_height="31dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:text="LIBERTAD"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/caluya"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:srcCompat="@drawable/caluyapink" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="112dp"
                android:layout_height="31dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="12dp"
                android:text="CALUYA"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:translationZ="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/caluya"
                app:layout_constraintStart_toStartOf="@+id/caluya" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>